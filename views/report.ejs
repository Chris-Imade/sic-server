<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Report Dashboard</h1>

    <div class="table-container">
        <div class="table-header">
            <h2>Event Registrations (<%= eventRegistrations.totalItems %>)</h2>
            <% if (eventRegistrations.totalItems > 0) { %>
                <a href="/report/download/eventRegistration" class="download-btn">Download CSV</a>
            <% } %>
        </div>
        <% if (eventRegistrations.totalItems === 0) { %>
            <p>No records found.</p>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% eventRegistrations.records.forEach(record => { %>
                    <tr>
                        <td><%= record.id %></td>
                        <td><%= record.firstName %> <%= record.lastName %></td>
                        <td><%= record.email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <%- include('partials/pagination', { data: eventRegistrations, model: 'eventRegistration' }) %>
        <% } %>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h2>Contacts (<%= contacts.totalItems %>)</h2>
            <% if (contacts.totalItems > 0) { %>
                <a href="/report/download/contact" class="download-btn">Download CSV</a>
            <% } %>
        </div>
        <% if (contacts.totalItems === 0) { %>
            <p>No records found.</p>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                </tr>
            </thead>
            <tbody>
                <% contacts.records.forEach(record => { %>
                    <tr>
                        <td><%= record.id %></td>
                        <td><%= record.name %></td>
                        <td><%= record.email %></td>
                        <td><%= record.subject %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <%- include('partials/pagination', { data: contacts, model: 'contact' }) %>
        <% } %>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h2>Newsletter Subscriptions (<%= newsletters.totalItems %>)</h2>
            <% if (newsletters.totalItems > 0) { %>
                <a href="/report/download/newsletter" class="download-btn">Download CSV</a>
            <% } %>
        </div>
        <% if (newsletters.totalItems === 0) { %>
            <p>No records found.</p>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% newsletters.records.forEach(record => { %>
                    <tr>
                        <td><%= record.id %></td>
                        <td><%= record.email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <%- include('partials/pagination', { data: newsletters, model: 'newsletter' }) %>
        <% } %>
    </div>
</body>
</html>
